/* pages/list/list.wxss */
.userinfo {
    width: 650rpx;
    margin-left: 50rpx;
    margin-top: 5px;
    height: 90px;
    display: flex;
    align-items: center;
    border-radius: 10px;
}
.userinfo-avatar {
    overflow: hidden;
    width: 120rpx;
    height: 120rpx;
    margin-left: 60rpx;
    border-radius: 50%;
}
.userinfo-btn{    
    border-radius: 10px;
}
.userinfo-view{
    margin-left: 40rpx;
    width: 380rpx;
    border-radius: 10px;
    height: 60%;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.sync-view{
    display: flex;
    width: 75px;
    justify-content: space-between;
}
.sync-view image{
    width: 35px;
    height: 35px;
}
.userinfo-nickname{
    margin-left: 40rpx;
    font-size: 18px;
}

.sort-view{
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 10px 0 0 50rpx;
    width: 650rpx;
    height: 40px;
    border-radius: 10px;
    background-color: #046865;
}
.list-view{
    margin-left: 50rpx;
    width: 650rpx;
}
.item-view{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    margin-top: 10px;
    padding: 10px;
    border-bottom: 1px solid #FFE900;
}
.infor-view{
    display: flex;
}
.infor-view text{
    display: block;
    padding: 5px;
    font-size: 17px;
}
.infor-view text:nth-child(2){
    margin-left: 35rpx;
}
.infor-view text:nth-child(3){
    margin-left: 35rpx;
}
.btn-view{
    display: flex;
    align-items: center;
    width: 280rpx;
    height: 40px;
    border-radius: 23px;
    background: #FCFFF7;
    box-shadow:  5px 5px 9px #eaede6,
             -5px -5px 9px #ffffff;
}
.btn-view text{
    margin-left: 25rpx;
    font-size: 15px;
    color: #3F3E47;
}
.btn-view image{
    margin-left: 25rpx;
    width: 30px;
    height: 30px;
    border-radius: 50%;
}
.map-view{
    margin-top: 10px;
    height: 0px;
    width: 100%;
}
map{
    width: 100%;
    height: 100%;
}